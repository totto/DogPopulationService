<configuration scan="true" scanPeriod="60 seconds">
    <property name="LOG_DIR" value="data" />
    <property name="APP_NAME" value="dogpopulation" />

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>10</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>20MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce logging from dependencies -->
    <logger name="org.eclipse.jetty" level="WARN"/>
    <logger name="org.apache" level="WARN"/>

    <logger name="org.glassfish.jersey" level="INFO"/>

    <logger name="no.nkk.dogpopulation" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="logfile" />
        <appender-ref ref="stdout" />
    </root>
</configuration>