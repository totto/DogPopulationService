<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>jsw</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/dogpopulationservice/bin</directory>
            <outputDirectory>/dogpopulationservice/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/dogpopulationservice/lib</directory>
            <outputDirectory>/dogpopulationservice/lib</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <excludes>
                <exclude>**/*.?ar</exclude>
            </excludes>
        </fileSet>
	   	<fileSet>
	  		<directory>src/main/assembly</directory>
	  		<includes>
	  			<include>log4j.xml</include>
	  		</includes>
	  		<outputDirectory>/dogpopulationservice/lib</outputDirectory>
	  	</fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/main/assembly/wrapper.conf</source>
            <outputDirectory>/dogpopulationservice/conf</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>target/generated-resources/appassembler/jsw/dogpopulationservice/lib/wrapper.jar</source>
            <outputDirectory>/dogpopulationservice/lib</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
        <file>
            <source>target/${project.build.finalName}.jar</source>
            <outputDirectory>/dogpopulationservice/lib</outputDirectory>
            <destName>${artifactId}.jar</destName>
            <fileMode>0644</fileMode>
        </file>
    </files>
</assembly>
